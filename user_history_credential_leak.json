{
  "name": "user_history_credential_leak",
  "tags": [
    "attack.id.T1552",
    "attack.tactic.unsecured_credentials",
    "user"
  ],
  "type": "user",
  "active": true,
  "custom": true,
  "format": "3.0",
  "options": {
    "file": {
      "search_paths": [
        "/"
      ],
      "home_dir_scan": true,
      "search_pattern_text": [
        "://\\S+:\\S+@",
        "(?i)authorization:\\s+bearer\\s+\\S+",
        "(?i)(password|passwd)=\\S+",
        "AWS_(ACCESS|SECRET)_ACCESS_KEY=\\S+",
        "AZURE_CLIENT_SECRET=\\S+",
        "GITHUB_TOKEN=\\S+",
        "MYSQL_PWD=\\S+",
        "RABBITMQ_DEFAULT_PASS=\\S+",
        "SQLCONNECT=.*PWD=\\S+",
        "echo\\s+\\S+\\s*|\\s*sudo\\s+(-S|--stdin)",
        "sshpass.*\\s+-p\\s+\\S+",
        "curl\\s+.*(-u\\s+\\S+:\\S+|-d\\s+\\S+)",
        "-auth",
        "--http(_|-)auth",
        "bcp\\s+.*-P\\S+",
        "isql\\s+.*-P\\s+\\S+",
        "dbping\\s+.*-c\\s+.*PWD=\\S+",
        "mongo\\s+.*-p\\S+",
        "sqlplus\\s+.*\\S+/\\S+@//",
        "(-U|--user)\\s+\\S+:\\S+",
        "ldapsearch\\s+.*-w\\s+\\S+",
        "redis-cli\\s+.*-a\\s+\\S+",
        "zip\\s+.*-P\\s+\\S+",
        "rar\\s+.*-hp\\S+",
        "7z\\s+.*-p\\S+"
      ],
      "search_paths_recurse": false,
      "search_paths_patterns": [
        "\\..*history"
      ],
      "search_paths_patterns_ignore": []
    },
    "engines": [
      "sandfly_engine_file"
    ],
    "response": {},
    "explanation": "The user history file '{file.path}' has evidence of commands that leak credentials."
  },
  "version": "1.00 Tor Houghton <th@bogus.net>",
  "severity": 3,
  "os_compat": {
    "linux": []
  },
  "date_added": "2023-02-22T17:42:53.929328Z",
  "description": "Checks user's history files for commands that leak credentials.",
  "max_timeout": 360,
  "max_cpu_load": 1,
  "max_disk_load": 1
}
